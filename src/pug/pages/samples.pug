extends ../_template

mixin samples-item(link, pic, title)
  .samples-item
    a(href='#' data-popup='' + link + '').samples-item__link.popup-open
    .samples-item__img(style='background-image:url("assets/img/index-slider-' + pic + '.jpg")')
    h3.samples-item__title #{title}

block variables
  - var title       = 'Rezina 812'
  - var description = 'Rezina 812'
  - var pageHeaderTitle = 'Заголовок'
  - var ogtitle     = 'Rezina 812'

block content
  .main-wrap
    include ../sections/header-d
    include ../sections/header-m

    //begin content
    main.main
      include ../sections/page-header
      .container-sm
        h2.main-title Производство резинотехнических изделий
        .text-row
          p Оптимально и эффективно помогать заказчику, обеспечивая его необходимыми резинотехническими изделиями, полимерами и другими материалами. Мы достигаем этого командой сотрудников, профессионализм которых позволяет компании «Резина812 ПКФ» быть лучшей для каждого заказчика.

        //begin samples-filter
        .samples-filter
          .samples-filter__left
            +svg('cursor')
            span Выберите категорию
          .samples-filter__right
            ul.samples-filter__list
              li.samples-filter__item
                a(href="#").samples-filter__link.active Все
              li.samples-filter__item
                a(href="#").samples-filter__link Станки
              li.samples-filter__item
                a(href="#").samples-filter__link Автомобили
              li.samples-filter__item
                a(href="#").samples-filter__link Спецтехника
              li.samples-filter__item
                a(href="#").samples-filter__link Строительство
        //end samples-filter

        //begin samples-items__list
        .samples-items__list
          +samples-item('#sample-01', '01', 'Строительная техника')
          +samples-item('#sample-02', '02', 'Производство')
          +samples-item('#sample-03', '03', 'Станки')
          +samples-item('#sample-01', '01', 'Строительная техника')
          +samples-item('#sample-02', '02', 'Производство')
          +samples-item('#sample-03', '03', 'Станки')
          +samples-item('#sample-01', '01', 'Строительная техника')
          +samples-item('#sample-02', '02', 'Производство')
          +samples-item('#sample-03', '03', 'Станки')
          +samples-item('#sample-01', '01', 'Строительная техника')
          +samples-item('#sample-02', '02', 'Производство')
          +samples-item('#sample-03', '03', 'Станки')
          +samples-item('#sample-01', '01', 'Строительная техника')
          +samples-item('#sample-02', '02', 'Производство')
          +samples-item('#sample-03', '03', 'Станки')
        //end samples-items__list
    //end content
    include ../sections/footer-d
    include ../sections/footer-m
    include ../sections/popup
