              a(href="#").info-item__link
                span Читать далее
                +svg('right-arrow')
          //end info-item

          //begin info-item
          .info__item.info-item
            .info-item__icon.info-item__icon--03
              +svg('info-03')
            .info-item__info
              h3.info-item__title Технические спецификации
              span.info-item__text Полезная информация для инженеров и технологов.
