//begin pagination
.pagination
  ul.pagination__list
    li.pagination__item.pagination-arr__left
      a.pagination__link(href='#')
        +svg('right-arrow')
    li.pagination__item
      a.pagination__link(href='#') 1
    li.pagination__item.active
      a.pagination__link(href='#') 2
    li.pagination__item
      a.pagination__link(href='#') 3
    li.pagination__item.inactive
      a.pagination__link(href='#') ...
    li.pagination__item
      a.pagination__link(href='#') 12
    li.pagination__item
      a.pagination__link(href='#') 13
    li.pagination__item.pagination-arr__right
      a.pagination__link(href='#')
        +svg('right-arrow')
//end pagination